<div class="new-product mt-5">
  <div class="container">
    <h1 class="text-center">
    <span style="font-family: time new roman, times, serif; text-shadow: 0 0 3px #080202a1">YOU MAY ALSO LIKE</span>
    <hr align="center" class="line mb-5"></hr>
    </h1>
    <div  class="owl-carousel owl-theme">
      <% products.each do |product|%>
      <div class="card" style="width: 100%; height: 18rem">
         <%= image_tag Product.find(product['id']).images[0], alt: "Product", class: "card-img-top"   %>
         <%= link_to "View Detail",product_path(:name =>product['name']),class: "show_detail"  %>
        <div class="card-body">
          <p class="card-text d-inline product-name"><strong><%= truncate(product['name'], length: 20) %></strong></p>
          <p class="card-text d-inline product-price"><strong>$<%= number_to_currency(product['price'], unit: "VNĐ", separator: ",",precision: 0, format: "%n %u") %></strong></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
<script>
var owl = $('.owl-carousel');
owl.owlCarousel({
    loop: false,
    margin: 10,
    nav: true,
    dots: false,
    autoplay: false,
    autoplayTimeout: 1000,
    autoplayHoverPause: true,
    navText: ["<i class='fa fa-angle-left fa-2x' aria-hidden='true'></i>", " <iclass='fa fa-angle-right fa-2x' aria-hidden='true'></i>"],
    responsive: {
        0: {
            items: 1
        },
        600: {
            items: 2
        },
        1000: {
            items: 4
        }
    }
});
$('.play').on('click', function() {
    owl.trigger('play.owl.autoplay', [1000])
})
$('.stop').on('click', function() {
    owl.trigger('stop.owl.autoplay')
})
</script>
